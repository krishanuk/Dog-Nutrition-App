<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/lblCustomeProductID"
        android:layout_width="34dp"
        android:layout_height="33dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="40dp"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/customProductName"
        app:layout_constraintStart_toEndOf="@+id/imgCustomProduct"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblCustomProductDescription"
        android:layout_width="339dp"
        android:layout_height="58dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="35dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtquantity" />

    <TextView
        android:id="@+id/customProductName"
        android:layout_width="191dp"
        android:layout_height="33dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgCustomProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="31dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/lblCustomProductPrice"
        android:layout_width="121dp"
        android:layout_height="44dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="84dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/customProductName" />

    <Button
        android:id="@+id/btnAddToCart"
        android:layout_width="139dp"
        android:layout_height="51dp"
        android:layout_marginStart="41dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="#8AEC852E"
        android:text="Add To Cart"
        app:layout_constraintBottom_toTopOf="@+id/lblCustomProductDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/txtquantity" />

    <EditText
        android:id="@+id/txtquantity"
        android:layout_width="55dp"
        android:layout_height="52dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="30dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/lblCustomProductDescription"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/imgCustomProduct" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="13dp"
        android:text="Price"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/lblCustomProductPrice"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imgCustomProduct"
        app:layout_constraintTop_toBottomOf="@+id/customProductName" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="76dp"
        android:layout_height="22dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="27dp"
        android:text="Quantity"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/lblCustomProductDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgCustomProduct" />


</androidx.constraintlayout.widget.ConstraintLayout>